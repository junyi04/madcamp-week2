// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FriendRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELED
}

enum StarType {
  COMMIT
  PR
}


model User {
  id       Int    @id @default(autoincrement())
  nickname String
  githubUserId Int?      @unique
  githubUser   GithubUser? @relation(fields: [githubUserId], references: [id])

  sentRequests     FriendRequest[] @relation("SentRequests")
  receivedRequests FriendRequest[] @relation("ReceivedRequests")

  friends   Friendship[] @relation("UserFriends")
  friendOf  Friendship[] @relation("UserFriendOf")
}

model FriendRequest {
  id          Int                 @id @default(autoincrement())
  requesterId Int
  receiverId  Int
  status      FriendRequestStatus @default(PENDING)
  createdAt   DateTime            @default(now())
  respondedAt DateTime?

  requester User @relation("SentRequests", fields: [requesterId], references: [id])
  receiver  User @relation("ReceivedRequests", fields: [receiverId], references: [id])

  @@unique([requesterId, receiverId])
  @@index([receiverId])
}

model Friendship {
  id        Int      @id @default(autoincrement())
  userId    Int
  friendId  Int
  createdAt DateTime @default(now())
  deletedAt DateTime?

  user   User @relation("UserFriends", fields: [userId], references: [id])
  friend User @relation("UserFriendOf", fields: [friendId], references: [id])

  @@unique([userId, friendId])
  @@index([friendId])
}

model GithubUser {
  id           Int          @id @default(autoincrement())
  githubId     String       @unique
  avatar       String?
  name         String?
  accessToken  String       
  publicRepos  Int          @default(0)
  repositories Repository[] 
  createdAt    DateTime     @default(now())

  user         User?
}

model Repository {
  id           Int      @id @default(autoincrement())
  repoId       BigInt   @unique
  name         String   
  updatedAt    String   
  createdAt    DateTime @default(now())
  lastSyncedAt DateTime?
  userId       Int
  user         GithubUser @relation(fields: [userId], references: [id])
  lastSyncAt   DateTime

  galaxyX      Float
  galaxyY      Float
  galaxyZ      Float
  galaxySize   Float

  commits      Commit[] 
  stars        Star[]
}

model Commit {
  id           Int        @id @default(autoincrement())
  sha          String     @unique 
  message      String
  date         String     
  repoId       Int
  repository   Repository @relation(fields: [repoId], references: [id])

  stars        Star[]
}

model Star {
  id         Int      @id @default(autoincrement())
  type       StarType
  x          Float
  y          Float
  z          Float
  size       Float
  color      String
  
  repoId     Int
  repository Repository @relation(fields: [repoId], references: [id])
  commitId   Int?
  commit     Commit?   @relation(fields: [commitId], references: [id])
  pullRequestId    BigInt?
  pullRequestTitle String?
  pullRequestUrl   String?

  @@index([repoId])
  @@index([commitId])
  @@index([pullRequestId])
}
